// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Node.js & Android",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "image": "ghcr.io/okhiroyuki/docker-cordova:latest",
  "mounts":[
    "source=node_modules_${devcontainerId},target=${containerWorkspaceFolder}/node_modules,type=volume",
    "source=testapp_node_modules_${devcontainerId},target=${containerWorkspaceFolder}/testapp/node_modules,type=volume",
    "source=testapp_platforms_${devcontainerId},target=${containerWorkspaceFolder}/testapp/platforms,type=volume",
    "source=testapp_plugins_${devcontainerId},target=${containerWorkspaceFolder}/testapp/plugins,type=volume",
    "source=testapp_temp-module-copy_${devcontainerId},target=${containerWorkspaceFolder}/testapp/temp-module-copy,type=volume"
  ],

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {},

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  // "postCreateCommand": "yarn install",
  "postAttachCommand": "sudo chown node node_modules testapp/node_modules testapp/platforms testapp/plugins testapp/temp-module-copy &&  npm ci",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "usernamehw.errorlens",
        "eamodio.gitlens",
        "streetsidesoftware.code-spell-checker",
        "EditorConfig.EditorConfig",
        "emeraldwalk.RunOnSave",
        "redhat.vscode-yaml",
        "github.vscode-github-actions",
        "DavidAnson.vscode-markdownlint"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
